/* pages/home/home.wxss */
.box {
    height: 100%;
    width: 100%;
}

.box-top-view {
    display: flex;
    height: 250px;
    width: 100%;
    background: #DEF0FD;
    position: absolute;
    text-align: center;
    justify-content: center;
}

.box-top-view-center {
    margin-top: 25px;
    width: 150px;
    height: 150px;
    background: orange;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    border-style: solid;
    border-width: 5px;
    border-radius: 20px;
    border-color: white;
}

.box-bottom-view-center-textView {
    font-size: 12px;
    background: white;
    padding-left: 12px;
    padding-right: 12px;
    height: 20px;
    line-height: 20px;
    border-radius: 10px;
    margin-bottom: 10px;
}

.box-bottom-view-center-textView-title1 {
    display: inline-block;
    color: orange;
}

.box-bottom-view-center-textView-title2 {
    display: inline-block;
    font-size: 15px;
}

.box-bottom-view-center-textView-title3 {
    display: inline-block;
    margin-left: 2px;
    color: orange;
}

.box-bottom-view {
    /* height: 100% 0px; */
    width: 100%;
    background: white;
    position: absolute;
    margin-top: 210px;
    border-top-right-radius: 40px;
    border-top-left-radius: 40px;
}

.box-bottom-view-title {
    margin-left: 20px;
    margin-top: 20px;
    font-size: 20px;
}

.box-box-bottom-view-button {
    margin-top: 20px;
    height: 40px;
    width: 100% - 40px;
    margin-left: 20px;
    margin-right: 20px;
    display: flex;
}

.box-box-bottom-view-button-24 {
    display: inline-block;
}

.box-box-bottom-view-button-48 {
    display: inline-block;
}

.box-box-bottom-view-button-72 {
    display: inline-block;
}

.box-box-bottom-view-button-7day {
    display: inline-block;
}

.box-bottom-view-center-title {
    margin-left: 20px;
    margin-top: 20px;
    font-size: 20px;
}

.box-bottom-view-center-view {
    width: 100% -40px;
    height: 150px;
    margin-top: 10px;
    margin-left: 20px;
    margin-right: 20px;
    background: #F6F6F6;
    border-radius: 20px;
}

.box-bottom-view-center-view-item1 {
    display: flex;
    margin-left: 20px;
    margin-top: 20px;
    align-items: center;
}

.box-bottom-view-center-view-leftImage1 {
    width: 30px;
    height: 30px;
    background: red;
    border-radius: 15px;
    display: inline-block;
}

.box-bottom-view-center-view-title1 {
    display: inline-block;
    margin-left: 7px;
}

.box-bottom-view-center-view-time1 {
    display: inline-block;
    text-align: center;
    flex: 1;
}

.box-bottom-view-center-view-leftImage2 {
    width: 30px;
    height: 30px;
    background:#3DC15F;
    border-radius: 15px;
    display: inline-block;
    margin-left: 20px;
}

.box-bottom-view-center-view-title2 {
    display: inline-block;
    margin-left: 7px;
}

.box-bottom-view-center-view-time2 {
    display: inline-block;
    text-align: center;
    flex: 1;
}

  